/*
 * Not an executable file
 * Class file: template / definition for a dog object
 * ALL OBJECTS HAVE: State & Definition
 * State: attributes / characteristics - name, colour, etc
 * Behaviour: methods that define the actions of the object - speak, eat, etc
 * 
 * 5 main parts to the ANATOMY of a Class that defines a object
 */
public class Dog 
{
	//1. Private Instance Variables - Attributes
	//PRIVATE :: cannot directly change an attribute's value
	private String name;
	public String breed;
	private String colour;
	private char gender;
	private int age;
	//2. Constructors - when NEW is used the constructor is invoked
	//It is the same name as the class name
	public Dog(String uName, String breed, String colour, char gender, int age)
	{
		//"this" keyword refers to the class instance variables
		//use "this." to differentiate if the names are the same
		name = uName;
		this.breed = breed;
		this.colour = colour;
		this.gender = gender;
		this.age = age;
	}
	//3. Accessor / get methods and Mutator/Set methods
	public void setName(String name)
	{
		this.name = name;
	}
	public void setBreed(String breed)
	{
		this.breed = breed;
	}
	public void setColour(String colour)
	{
		this.colour = colour;
	}
	public void setGender(char gender)
	{
		this.gender = gender;
	}
	public void setAge(int age)
	{
		this.age = age;
	}
	//Accessor / Get Methods - return an attribute to the caller
	public String getName()
	{
		return name;
	}
	public String getBreed()
	{
		return breed;
	}
	public String getColour()
	{
		return colour;
	}
	public char getGender()
	{
		return gender;
	}
	public int getAge()
	{
		return age;
	}
	//4. Class Methods :: denote behaviour of the object
	//5. toString() - shows how the object is printed
	public String toString()
	{
		return ("Name:" + name + "\n" + 
				"Breed: " + breed + "\n" + 
				"Colour: " + colour + "\n" + 
				"Gender: " + gender + "\n" + 
				"Age: " + age + "\n");
	}
}








import java.util.ArrayList;
public class PetShop 
{
	//PIV'S
	private String name;
	private String address;
	private String phoneNum;
	//Create an ArrayList of Birds & Dogs :: DO NOT INSTANTIATE AL<>s HERE
	private ArrayList<Bird> birds;
	private ArrayList<Dog> dogs;
	//Constructors
	public PetShop()
	{
		name = "Beuf Dogs & Birds";
		address = "Somewhere on Steeles Ave W.";
		phoneNum = "xxx-xxx-xxxx";
		birds = new ArrayList<Bird>();
		dogs = new ArrayList<Dog>();
	}//end PetShop() Default Constructor
	//Regular Constructors
	public PetShop(String name, String address, String phoneNum, ArrayList<Bird> birds, ArrayList<Dog> dogs)
	{
		this.name = name;
		this.address = address;
		this.phoneNum = phoneNum;
		this.birds = birds;
		this.dogs = dogs;
	}//end Regular Constructor
	//Allows users to retrieve the AL<>s
	public ArrayList<Bird> getBirds()
	{
		return birds;
	}//end getBirds()
	public ArrayList<Dog> getDogs()
	{
		return dogs;
	}//end getDogs()
	//Set Methods
	public void addBird(Bird newBird)
	{
		birds.add(newBird);
	}//end addBird()
	public void addDog(Dog newDog)
	{
		dogs.add(newDog);
	}//end addDog()
	public void removeBird(Bird birdToRem)
	{
		birds.remove(birdToRem);
	}//end removeBird()
	public void removeDog(Dog dogToRem)
	{
		dogs.remove(dogToRem);
	}//end removeDog()
	//Return AL<>s
	public String birdList()
	{
		for(int i = 0; i < birds.size(); i++)
		{
			return PetShop(birds[i])
		}
	}//end birdList()
	public String dogList()
	{
		
	}//end dogList()
	public String toString()
	{
		
	}//end toString()
}//end PetShop()
